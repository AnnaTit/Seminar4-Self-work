// Задача - количество цифр в числе

int DigitCount(int number)
{
    int count = 0;
    while(number > 0)
    {
        count++;
        number /= 10;
    }
    return count;
}
Console.Write("Enter a number: ");
int num = Convert.ToInt32(Console.ReadLine());
Console.WriteLine("Number of digits is: " + DigitCount(num));
